{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/test-db",
      "dest": "server.js"
    },
    {
      "src": "/api/debug",
      "dest": "server.js"
    },
    {
      "src": "/api/motivation",
      "dest": "server.js"
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|ico|svg)",
      "dest": "/public/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ]
}
